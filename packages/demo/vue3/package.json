    "@typescript-eslint/parser": "^4.28.4",
    "@vitejs/plugin-vue": "^1.2.5",
    "@vue/compiler-sfc": "^3.0.5",
    "eslint": "^7.31.0",
    "lint-staged": "^11.0.1",
    "typescript": "^4.3.2",
    "vite": "^2.4.3",
    "vue": "^3.0.5",
    "vue-tsc": "^0.0.24"
  }
