{
  "name": "chill-schema-form",
  "private": true,
  "workspaces": [
    "configs/*",
    "demo/*",
    "packages/*"
  ],
  "version": "1.0.0",
  "repository": "git@github.com:jackson-yyy/chill-schema-form.git",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node scripts/dev.ts",
    "build": "ts-node scripts/build/index.ts",
    "dev:vue2": "pnpm dev --filter @chill-schema-form/demo-vue2",
    "dev:vue3": "pnpm dev --filter @chill-schema-form/demo-vue3",
    "clear": "rimraf node_modules && lerna clean --yes",
    "lint": "lerna run lint",
    "bts": "pnpm clear && lerna bootstrap",
    "precommit": "ls-lint && lerna run precommit"
  },
  "devDependencies": {
    "@chill-schema-form/eslint-config": "workspace:*",
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@ls-lint/ls-lint": "^1.10.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.4.6",
    "@types/rollup-plugin-peer-deps-external": "^2.2.1",
    "chalk": "^4.1.1",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.1",
    "minimist": "^1.2.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.1",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^10.1.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
