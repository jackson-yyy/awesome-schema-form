{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "paths": {
      "@chill-schema-form/core": ["packages/core/src/index.ts"],
      "@chill-schema-form/vue-render": ["packages/vue-render/src/index.ts"]
    }
  },

  "exclude": ["**/node_modules/*", "**/dist/*"]
}
